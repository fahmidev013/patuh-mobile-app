<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_home" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DAFTAR"
            android:gravity="center"
            android:layout_gravity="center"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_10dp"
        android:background="@color/palleteaccentpurpledark"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/size_25dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size_5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="@dimen/size_126dp"
                    android:layout_height="@dimen/size_126dp"
                    android:src="@drawable/pic_galgadot"
                    android:scaleType="fitXY"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="48.502"
                        android:textSize="35sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="poin"
                        android:layout_gravity="end"
                        android:textStyle="bold" />

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1dp"
                android:layout_marginTop="@dimen/size_5dp"
                android:background="@color/colorBlack"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/etNama"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_30dp"
                        android:layout_marginTop="@dimen/size_10dp"
                        android:hint="GAL GADOT SUROSO" />

                    <EditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_30dp"
                        android:layout_marginTop="@dimen/size_10dp"
                        android:hint="gal.gadot@gmail.com" />

                    <EditText
                        android:id="@+id/etPhone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_30dp"
                        android:layout_marginTop="@dimen/size_10dp"
                        android:hint="081802589654" />

                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_30dp"
                        android:layout_marginTop="@dimen/size_10dp"
                        android:hint="*******"
                        android:inputType="textPassword" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentRight="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SUNTING"/>

                        <ImageView
                            android:tint="@color/colorBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_mode_edit"/>

                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1dp"
                android:layout_marginTop="@dimen/size_5dp"
                android:background="@color/colorBlack"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_30dp"
                        android:layout_marginTop="@dimen/size_10dp"
                        android:textStyle="bold"
                        android:text="BAHASA" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_10dp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_10dp"
                            android:layout_marginLeft="@dimen/size_8dp"
                            android:text="Indonesia"
                            android:textColor="@color/palletepurpledark" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_10dp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_10dp"
                            android:layout_marginLeft="@dimen/size_8dp"
                            android:text="Inggris"
                            android:textColor="@color/palletepurpledark" />

                    </LinearLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentRight="true">


                        <ImageView
                            android:tint="@color/colorBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_keyboard_arrow_down"/>

                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>

            <!---->


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1dp"
                android:layout_marginTop="@dimen/size_5dp"
                android:background="@color/colorBlack"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_30dp"
                        android:layout_marginTop="@dimen/size_10dp"
                        android:textStyle="bold"
                        android:text="SYARAT DAN KETENTUAN" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_30dp"
                        android:layout_marginTop="@dimen/size_10dp"
                        android:text="Lorem ipsumLorem ipsumLorem ipsumLorem ipsum
Lorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsum
Lorem ipsumLorem ipsumLorem ipsum" />

                </LinearLayout>


            </LinearLayout>



            <!---->


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1dp"
                android:layout_marginTop="@dimen/size_5dp"
                android:background="@color/colorBlack"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_30dp"
                        android:layout_marginTop="@dimen/size_10dp"
                        android:textStyle="bold"
                        android:text="KEBIJAKAN PERUSAHAAN" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_30dp"
                        android:layout_marginTop="@dimen/size_10dp"
                        android:text="Lorem ipsumLorem ipsumLorem ipsumLorem ipsum
Lorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsum
Lorem ipsumLorem ipsumLorem ipsum" />

                </LinearLayout>


            </LinearLayout>


            <!---->



            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1dp"
                android:layout_marginTop="@dimen/size_5dp"
                android:background="@color/colorBlack"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_30dp"
                        android:layout_marginTop="@dimen/size_10dp"
                        android:textStyle="bold"
                        android:text="TENTANG PATUH" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_30dp"
                        android:layout_marginTop="@dimen/size_10dp"
                        android:text="Patuh Apps v 2.1" />

                </LinearLayout>


            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10dp"
                android:text="KELUAR"
                android:textColor="@color/palletewhite"
                android:background="@color/palleteaccentpurpledark"/>

            <!---->

        </LinearLayout>


    </ScrollView>




</LinearLayout>