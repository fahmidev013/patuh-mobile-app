<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/size_15dp"
            android:tint="@color/colorBlack"
            android:src="@drawable/ic_keyboard_arrow_left" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/ic_logo_white"
            android:tint="@color/palleteaccentcyan"
            android:gravity="center"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_5dp"
            android:layout_weight="0.7"
            android:background="@color/palleteaccentcyan"/>

        <View
            android:layout_weight="1.3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_5dp"
            android:background="@color/palleteaccentpurpledark"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start|center_vertical"
                android:padding="30dp">

                <ImageView
                    android:id="@+id/img_pp"
                    android:layout_width="@dimen/size_96dp"
                    android:layout_height="@dimen/size_96dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:src="@drawable/pic_galgadot"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvPoin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="48.258"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_25sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="poin"
                        android:textColor="@color/colorBlack"
                        android:layout_gravity="end"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

                </LinearLayout>

            </LinearLayout>




            <View android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_marginTop="@dimen/size_15dp"
                android:layout_below="@+id/ll_card"
                android:background="#000000" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_nama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/colorBlack"
                        android:textColor="@color/colorBlack"
                        android:hint="Gal Gadot SUroso"/>

                    <TextView
                        android:id="@+id/tv_mail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/colorBlack"
                        android:textColor="@color/colorBlack"
                        android:layout_marginTop="@dimen/size_3dp"
                        android:hint="gadot@gmail.com"/>

                    <TextView
                        android:id="@+id/tv_hp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/colorBlack"
                        android:textColor="@color/colorBlack"
                        android:layout_marginTop="@dimen/size_3dp"
                        android:hint="08182545466"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/colorBlack"
                        android:textColor="@color/colorBlack"
                        android:layout_marginTop="@dimen/size_3dp"
                        android:hint="********"/>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/ll_btn_sunting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">



                    <TextView
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/size_10dp"
                        android:layout_marginTop="@dimen/size_10dp"
                        android:layout_toLeftOf="@+id/btn_sunting"
                        android:text="SUNTING"/>

                    <ImageView
                        android:id="@+id/btn_sunting"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_3dp"
                        android:src="@drawable/ic_mode_edit"
                        android:tint="@color/colorBlack"/>



                </RelativeLayout>

            </LinearLayout>


            <View android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_marginTop="@dimen/size_15dp"
                android:layout_below="@+id/ll_card"
                android:background="#000000" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:text="BAHASA"/>


                    <LinearLayout
                        android:id="@+id/layout_bahasa"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Indonesia"
                            android:textColor="@color/colorBlack"/>

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="English"
                            android:textColor="@color/colorBlack"/>

                    </LinearLayout>




                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/btn_arrowbahasa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/size_3dp"
                        android:src="@drawable/ic_keyboard_arrow_right"
                        android:tint="@color/colorBlack"/>



                </RelativeLayout>

            </LinearLayout>


            <View android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_marginTop="@dimen/size_15dp"
                android:layout_below="@+id/ll_card"
                android:background="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorBlack"
                            android:text="SYARAT DAN KETENTUAN"/>


                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/btn_arrowsk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="@dimen/size_3dp"
                            android:src="@drawable/ic_keyboard_arrow_right"
                            android:tint="@color/colorBlack"/>



                    </RelativeLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/layout_sk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_10dp"
                    android:visibility="gone"
                    android:textColor="@color/colorBlack"
                    android:text="LOremipsumLOremipsumLOremipsumLOremipsumLOremipsumLOremipsumLOremipsum
LOremipsumLOremipsumLOremipsumLOremipsumLOremipsumLOremipsumLOremipsumLOremipsumLOremipsumLOremipsum"/>

            </LinearLayout>


            <!--KEBUJAKAN KERAHASIAAN-->

            <View android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_marginTop="@dimen/size_15dp"
                android:layout_below="@+id/ll_card"
                android:background="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorBlack"
                            android:text="KEBIJAKAN KERAHASIAAN"/>


                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/btn_arrowkk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="@dimen/size_3dp"
                            android:src="@drawable/ic_keyboard_arrow_right"
                            android:tint="@color/colorBlack"/>



                    </RelativeLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/llkk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_10dp"
                    android:visibility="gone"
                    android:textColor="@color/colorBlack"
                    android:text="LOremipsumLOremipsumLOremipsumLOremipsumLOremipsumLOremipsumLOremipsum
LOremipsumLOremipsumLOremipsumLOremipsumLOremipsumLOremipsumLOremipsumLOremipsumLOremipsumLOremipsum"/>

            </LinearLayout>


            <!--TENTANG PATUH-->


            <View android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_marginTop="@dimen/size_15dp"
                android:layout_below="@+id/ll_card"
                android:background="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorBlack"
                            android:text="TENTANG PATUH"/>


                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/btn_arrowtp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="@dimen/size_3dp"
                            android:src="@drawable/ic_keyboard_arrow_right"
                            android:tint="@color/colorBlack"/>



                    </RelativeLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/lltp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_10dp"
                    android:visibility="gone"
                    android:textColor="@color/colorBlack"
                    android:text="PATUH APP V2.1"/>

            </LinearLayout>



            <Button
                android:id="@+id/btnKeluar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_56dp"
                android:layout_marginBottom="@dimen/size_56dp"
                android:layout_marginLeft="@dimen/size_10dp"
                android:text="KELUAR"
                android:textColor="@color/palletewhite"
                android:background="@color/palleteaccentpurpledark"/>

        </LinearLayout>

    </ScrollView>



</LinearLayout>