<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/hargaiketaatan_bg"/>

        <ImageView
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size_20dp"
            android:src="@drawable/ic_logo_white"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_5dp"
            android:layout_weight="0.7"
            android:background="@color/palleteaccentcyan"/>

        <View
            android:layout_weight="1.3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_5dp"
            android:background="@color/palleteaccentpurpledark"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/hargai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:textStyle="bold"
            android:textSize="32sp"
            android:textColor="@color/colorBlack"
            android:text="HARGAI\nKETAATAN"
            android:textAlignment="center"
            android:src="@drawable/patuhcontent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/size_30dp"
            android:gravity="center_horizontal"
            android:layout_below="@+id/hargai">

            <Button
                android:id="@+id/btn_masuk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MASUK"
                android:textColor="@color/palletewhite"
                android:background="@color/palleteaccentpurpledark"/>

            <Button
                android:id="@+id/btn_daftar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DAFTAR"
                android:layout_marginLeft="35dp"
                android:textColor="@color/palletewhite"
                android:background="@color/palleteaccentpurpledark"/>

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>