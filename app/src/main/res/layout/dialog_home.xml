<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/size_20dp"
            android:background="@color/palleteaccentpurpledark"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txt_title"
                android:layout_centerInParent="true"
                android:textColor="@color/palletewhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_25sp"
                android:textAlignment="center"
                android:text="SELAMAT DATANG"/>

            <ImageView
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_logo_white"
                android:layout_above="@+id/txt_title"
                android:layout_marginBottom="@dimen/size_56dp"
                android:layout_centerHorizontal="true"/>



        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/size_56dp"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:gravity="center_horizontal"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_25sp"
                android:text="Siap Sebarkan Ketaatan ?"/>

            <Button
                android:layout_gravity="center_horizontal"
                android:id="@+id/btn_confirm"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="@dimen/size_30dp"
                android:layout_width="wrap_content"
                android:padding="@dimen/size_5dp"
                android:background="@color/palleteaccentpurpledark"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_25sp"
                android:text="Mulai"/>


        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/img_pp"
        android:layout_width="@dimen/size_126dp"
        android:layout_height="@dimen/size_126dp"
        android:src="@drawable/pic_galgadot"
        android:layout_centerInParent="true"/>

</RelativeLayout>