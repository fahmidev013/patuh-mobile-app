<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="user" type="app.patuhmobile.auth.AuthInfo"/>
    </data>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="app.patuhmobile.module.Home.HomeFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_profile"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_15dp"
                android:tint="@color/colorBlack"
                android:src="@drawable/ic_setting" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/ic_logo_white"
                android:tint="@color/palleteaccentcyan"
                android:gravity="center"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_5dp"
                android:layout_weight="0.7"
                android:background="@color/palleteaccentcyan"/>

            <View
                android:layout_weight="1.3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_5dp"
                android:background="@color/palleteaccentpurpledark"/>
        </LinearLayout>


        <android.support.design.widget.TabLayout
            android:id="@+id/sliding_tabs"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/palletepurplebg"
            app:tabMode="fixed" />

        <app.patuhmobile.module.adapter.NonSwipeableViewpager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/palletewhite" />



        <!--    <TextView
                android:id="@+id/txt_hello"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{user.username + user.loginType}" />-->

    </LinearLayout>

</layout>



