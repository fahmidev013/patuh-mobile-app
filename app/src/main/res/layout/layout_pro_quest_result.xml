<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="25sp"
        android:text="SELAMAT ANDA\nLULUS!"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_10dp"
        android:text="7/10 Pertanyaa Benar"
        android:textColor="@color/palletewhite"
        android:background="@color/palleteaccentpurpledark"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size_10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/size_126dp"
            android:layout_height="@dimen/size_126dp"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"
            android:src="@drawable/motor_license"/>


        <ImageView
            android:layout_width="@dimen/size_76dp"
            android:layout_height="@dimen/size_76dp"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_56dp"
            android:src="@drawable/pic_motor"/>

    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_15dp"
        android:textAlignment="center"
        android:textSize="15sp"
        android:text="BAGIKAN"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/size_15dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_facebook"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/size_15dp"
            android:src="@drawable/ic_whasapp"/>

    </LinearLayout>

</LinearLayout>