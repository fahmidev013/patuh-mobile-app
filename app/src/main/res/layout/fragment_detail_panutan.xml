<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="app.patuhmobile.module.Home.Panutan.DetailPanutanFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_profile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/size_15dp"
            android:tint="@color/colorBlack"
            android:src="@drawable/ic_setting" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/ic_logo_white"
            android:tint="@color/palleteaccentcyan"
            android:gravity="center"
            android:layout_gravity="center"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_5dp"
            android:layout_weight="0.7"
            android:background="@color/palleteaccentcyan"/>

        <View
            android:layout_weight="1.3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_5dp"
            android:background="@color/palleteaccentpurpledark"/>
    </LinearLayout>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/size_12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_3dp">

                    <ImageView
                        android:id="@+id/picprofile"
                        android:layout_margin="@dimen/size_3dp"
                        android:layout_width="@dimen/size_56dp"
                        android:layout_height="@dimen/size_56dp"
                        android:src="@drawable/pic_galgadot"/>

                </android.support.v7.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_7dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_1dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_judul"
                            android:layout_marginLeft="@dimen/size_8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_25sp"
                            android:text="Gal Gadot"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/btn_lapor"
                                android:layout_alignParentRight="true"
                                android:layout_width="@dimen/size_30dp"
                                android:layout_height="@dimen/size_30dp"
                                android:layout_marginRight="@dimen/size_12dp"
                                android:tint="@color/colorBlack"
                                android:src="@drawable/ic_action_warning"/>
                        </RelativeLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/size_20dp"
                            android:layout_height="@dimen/size_20dp"
                            android:layout_marginLeft="@dimen/size_8dp"
                            android:tint="@color/colorBlack"
                            android:src="@drawable/ic_action_location"/>

                        <TextView
                            android:id="@+id/tv_lokasi"
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/text_size_14sp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_8dp"
                            android:text="Mampang Prapatan"/>

                    </LinearLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/btn_dialog_detail_panutan"
                        android:layout_width="@dimen/size_35dp"
                        android:layout_height="@dimen/size_35dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_photo_camera"/>
                </RelativeLayout>


            </LinearLayout>


            <ImageView
                android:id="@+id/piccontent"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="@dimen/size_15dp"
                android:scaleType="fitXY"
                android:src="@drawable/patuhcontent"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/size_15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/toogle_like"
                    android:layout_width="@dimen/size_56dp"
                    android:layout_height="@dimen/size_56dp"
                    android:src="@drawable/ic_action_heart_balck"/>

                <ImageView
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="@dimen/size_15dp"
                    android:src="@drawable/ic_share"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/btnexit"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_close" />

                </RelativeLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/tv_konten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_7dp"
                android:layout_marginTop="@dimen/size_15dp"
                android:textSize="18sp"
                android:text="LoremipsumLoremipsumLoremipsumLoremipsumLoremipsumLoremipsumLoremipsumLoremipsumLoremipsumLoremipsumLoremipsum
LoremipsumLoremipsumLoremipsumLoremipsumLoremipsumLoremipsumLoremipsumLoremipsumLoremipsumLoremipsumLoremipsumLoremipsumLoremipsumLoremipsum"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_15dp"
                android:weightSum="1.2"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_margin="@dimen/size_3dp">

                    <ImageView
                        android:id="@+id/piccomment"
                        android:layout_margin="@dimen/size_3dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_56dp"

                        android:src="@drawable/pic_galgadot"/>

                </android.support.v7.widget.CardView>


                <EditText
                    android:id="@+id/komentar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:hint="Comment......"/>

                <TextView
                    android:id="@+id/btn_kirim_komentar"
                    android:layout_width="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="KIRIM"/>

            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/layoutview"
                android:layout_marginTop="@dimen/size_5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>





</LinearLayout>
