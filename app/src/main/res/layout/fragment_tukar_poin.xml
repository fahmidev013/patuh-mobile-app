<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/size_15dp"
            android:tint="@color/colorBlack"
            android:src="@drawable/ic_keyboard_arrow_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:text="TUKAR POIN"
            android:textSize="@dimen/text_size19"
            android:layout_gravity="center"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_5dp"
            android:layout_weight="0.7"
            android:background="@color/palleteaccentcyan"/>

        <View
            android:layout_weight="1.3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_5dp"
            android:background="@color/palleteaccentpurpledark"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/child_fragcontainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="@dimen/size_35dp"
        android:layout_height="160dp">

        <ImageView
            android:id="@+id/tukarpoin_picimgv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:src="@drawable/pic_galgadot"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_centerVertical="true">


            <TextView
                android:id="@+id/tukarpoin_usertv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_12sp"
                android:text="GalGadot "/>

            <TextView
                android:id="@+id/tukarpoin_pointv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_25sp"
                android:text="-"/>

            <Button
                android:id="@+id/btn_kupon_saya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/palletewhite"
                android:background="@color/palletepurpledark"
                android:textSize="@dimen/text_size_14sp"
                android:text="Kupon Saya"/>

        </LinearLayout>

    </RelativeLayout>

    <View android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#000000" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/size_15dp"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/size_15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size19"
                android:text="DAFTAR KUPON"/>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_kupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

